<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FineManagementSystem.Login"
             xmlns:local="clr-namespace:FineManagementSystem"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout >
            <Image Source="{local:ImageResource FineManagementSystem.Images.user.png}" HeightRequest="150" Margin="0,50,0,20" />
            <Label Text="Welcome Back!" HorizontalTextAlignment="Center" FontSize="45" TextColor="White" />

            <Frame BackgroundColor="Transparent" Margin="0,20,0,0">
                <Entry Keyboard="Text" Placeholder="User Name"
            VerticalOptions="CenterAndExpand" />

            </Frame>
            <Frame BackgroundColor="Transparent" Margin="0,0,0,0">
                <Entry Keyboard="Numeric" Placeholder="Password"
            VerticalOptions="CenterAndExpand" />
            </Frame>
            <ImageButton Source="{local:ImageResource FineManagementSystem.Images.go.png}" BackgroundColor="Transparent" HeightRequest="50" Margin="250,70,0,0" Clicked="Go" />
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>